<%include ../partials/header%>
	
	<div class="container">
		<div class="row">
			<div class="jumbotron">
				<h2> Create new product </h2>
			</div>
		</div>
		
			<div class="form-group forms">
				<form method="POST" action="/products">
					<div class="form-group">
						<input class="form-control" type="text" placeholder="Product name" name="product[name]">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" placeholder="Description" name="product[description]">
					</div>
					<div class="form-group">
						<select class="form-control" name="product[type]" >
					      <option>Smartphone</option>
					      <option>Tablet</option>
					    </select>
					</div>
					<button class="btn btn-primary">Submit</button>
				</form>
			</div>
	</div>

<%include ../partials/footer%>