<%include ../partials/header%>
<h1> This is the page that all the issues will be displayed</h1>

		<div class="container">
			<%products.issue.forEach(function(issues){%>
				<div id="a" class="containt <%=issues.state%>">
					<div class="title">
						<h6><%=issues.title%></h6>
					</div>
					<hr>
					<div class="description">
						<h6><%=issues.description%></h6>
					</div>
					<div id="b">
						<a href="/products/<%=products._id%>/issues/<%=issues._id%>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
					</div>
				</div>
			<%});%>
		</div>
	
		<div class="container">
			<div class="form-group forms">
				<form method="POST" action="/products/<%=products._id%>/issues">
					<div class="form-group">
						<input class="form-control" type="text" placeholder="Title of issue" name="issues[title]">
					</div>
					<div class="form-group">
						<textarea class="form-control" name="issues[description]"></textarea>
					</div>
					<div class="form-group">
						<select class="form-control" name="issues[state]" >
					      <option>Acknowledged</option>
					      <option>Unsolved</option>
					      <option>Solved</option>
					    </select>
					</div>
					<button class="btn btn-primary">Submit</button>
				</form>
			</div>
	</div>

	
<%include ../partials/footer%>
